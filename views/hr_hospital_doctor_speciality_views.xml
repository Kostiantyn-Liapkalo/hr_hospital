<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Doctor Speciality Views -->
    
    <!-- List View -->
    <record id="view_hr_hospital_doctor_speciality_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.speciality.tree</field>
        <field name="model">hr.hospital.doctor.speciality</field>
        <field name="arch" type="xml">
            <list string="Doctor Specialities">
                <field name="name" string="Specialty Name"/>
                <field name="code" string="Code"/>
                <field name="description" string="Description"/>
                <field name="doctors_count" string="Number of Doctors"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_hospital_doctor_speciality_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.speciality.form</field>
        <field name="model">hr.hospital.doctor.speciality</field>
        <field name="arch" type="xml">
            <form string="Doctor Specialty">
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                            <field name="active"/>
                        </group>
                        <group string="Description">
                            <field name="description" placeholder="Describe the medical specialty..."/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Doctors">
                            <field name="doctor_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="is_intern"/>
                                    <field name="rating"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Statistics">
                            <group>
                                <field name="doctors_count" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hr_hospital_doctor_speciality_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.speciality.search</field>
        <field name="model">hr.hospital.doctor.speciality</field>
        <field name="arch" type="xml">
            <search string="Doctor Specialties Search">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <filter string="Active Specialties" name="active_specialties" domain="[('active', '=', True)]"/>
                <filter string="Inactive Specialties" name="inactive_specialties" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="With Doctors" name="with_doctors" domain="[('doctors_count', '>', 0)]"/>
                <filter string="Without Doctors" name="without_doctors" domain="[('doctors_count', '=', 0)]"/>
                <group expand="0" string="Group By">
                    <group string="Active Status">
                        <field name="active"/>
                    </group>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_hospital_doctor_speciality" model="ir.actions.act_window">
        <field name="name">Doctor Specialties</field>
        <field name="res_model">hr.hospital.doctor.speciality</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hr_hospital_doctor_speciality_tree"/>
        <field name="search_view_id" ref="view_hr_hospital_doctor_speciality_search"/>
        <field name="help">Manage medical specialties and their assigned doctors</field>
    </record>

</odoo>