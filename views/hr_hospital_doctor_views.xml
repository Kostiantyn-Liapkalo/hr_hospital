<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.list</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="Doctors">
                <field name="full_name"/>
                <field name="speciality_id"/>
                <field name="license_number"/>
                <field name="experience"/>
                <field name="rating" widget="float_factor" options="{'factor': 5}"/>
                <field name="is_intern"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="active_patients_count" widget="statinfo"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <header>
                    <button name="action_start" type="object" string="Start Workday" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="%(action_hr_hospital_visit)d" type="action" string="Visits" class="oe_stat_button" icon="fa-calendar">
                        <field name="upcoming_visits_count" widget="statinfo"/>
                    </button>
                    <button name="action_generate_schedule_wizard" type="object" string="Schedule" class="oe_stat_button" icon="fa-clock-o"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_export_doctor_info" type="object" class="oe_stat_button" icon="fa-download" string="Export"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" placeholder="Doctor's Full Name"/>
                        </h1>
                        <h2>
                            <field name="speciality_id"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="license_number"/>
                            <field name="license_date"/>
                            <field name="experience"/>
                            <field name="rating" widget="float_factor" options="{'factor': 5}"/>
                            <field name="is_intern"/>
                            <field name="mentor_id"
                                   required="is_intern == True"
                                   invisible="is_intern == False"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contacts">
                            <group>
                                <field name="phone" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="country_id"/>
                                <field name="lang_id"/>
                                <field name="study_country_id"/>
                                <field name="user_id"/>
                            </group>
                        </page>
                        <page string="Schedule">
                            <field name="schedule_ids">
                                <list>
                                    <field name="day_of_week"/>
                                    <field name="specific_date"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="duration"/>
                                    <field name="schedule_type"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Patients">
                            <field name="patient_ids">
                                <list>
                                    <field name="full_name"/>
                                    <field name="blood_group"/>
                                    <field name="age"/>
                                    <field name="phone"/>
                                    <field name="last_visit_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Visits">
                            <field name="visit_ids">
                                <list>
                                    <field name="patient_id"/>
                                    <field name="planned_datetime"/>
                                    <field name="visit_type"/>
                                    <field name="state"/>
                                    <field name="diagnosis_count"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="full_name"/>
                <field name="license_number"/>
                <field name="speciality_id"/>
                <filter name="interns" string="Interns" domain="[('is_intern', '=', True)]"/>
                <filter name="experienced" string="Experienced (5+ years)" domain="[('experience', '>=', 5)]"/>
                <filter name="high_rating" string="High Rating (4+)" domain="[('rating', '>=', 4.0)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_speciality" string="Speciality" context="{'group_by': 'speciality_id'}"/>
                    <filter name="group_by_country" string="Country" context="{'group_by': 'country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hr_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hr_hospital_doctor_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first doctor
            </p>
        </field>
    </record>
</odoo>