<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contact Person Views -->
    
    <!-- List View -->
    <record id="view_hr_hospital_contact_person_tree" model="ir.ui.view">
        <field name="name">hr.hospital.contact.person.tree</field>
        <field name="model">hr.hospital.contact.person</field>
        <field name="arch" type="xml">
            <list string="Contact Persons">
                <field name="full_name" string="Name"/>
                <field name="relationship" string="Relationship"/>
                <field name="phone" string="Phone"/>
                <field name="email" string="Email"/>
                <field name="emergency_contact" string="Emergency"/>
                <field name="can_make_decisions" string="Can Make Decisions"/>
                <field name="related_patients_count" string="Patients"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_hospital_contact_person_form" model="ir.ui.view">
        <field name="name">hr.hospital.contact.person.form</field>
        <field name="model">hr.hospital.contact.person</field>
        <field name="arch" type="xml">
            <form string="Contact Person">
                <sheet>
                    <group>
                        <group string="Personal Information">
                            <field name="first_name" required="1"/>
                            <field name="last_name" required="1"/>
                            <field name="middle_name"/>
                            <field name="birth_date"/>
                            <field name="age" readonly="1"/>
                            <field name="gender"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group string="Contact Role">
                            <field name="relationship" required="1"/>
                            <field name="emergency_contact"/>
                            <field name="can_make_decisions"/>
                        </group>
                        <group string="Address Information">
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Related Patients">
                            <field name="patient_ids">
                                <tree>
                                    <field name="full_name"/>
                                    <field name="birth_date"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="blood_group"/>
                                    <field name="allergies"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Statistics">
                            <group>
                                <field name="related_patients_count" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_hr_hospital_contact_person_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.contact.person.kanban</field>
        <field name="model">hr.hospital.contact.person</field>
        <field name="arch" type="xml">
            <kanban string="Contact Persons">
                <field name="full_name"/>
                <field name="relationship"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="emergency_contact"/>
                <field name="related_patients_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_color">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_title">
                                    <strong><field name="full_name"/></strong>
                                    <div class="oe_kanban_subtitle">
                                        <field name="relationship"/>
                                        <t t-if="record.emergency_contact.raw_value">
                                            <span class="oe_tag oe_red">Emergency Contact</span>
                                        </t>
                                    </div>
                                </div>
                                <div class="oe_kanban_bottom">
                                    <div class="oe_kanban_left">
                                        <field name="phone"/>
                                        <br/>
                                        <field name="email"/>
                                    </div>
                                    <div class="oe_kanban_right">
                                        <span class="oe_tag">
                                            <field name="related_patients_count"/> Patients
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hr_hospital_contact_person_search" model="ir.ui.view">
        <field name="name">hr.hospital.contact.person.search</field>
        <field name="model">hr.hospital.contact.person</field>
        <field name="arch" type="xml">
            <search string="Contact Person Search">
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="full_name"/>
                <field name="relationship"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="emergency_contact"/>
                <field name="can_make_decisions"/>
                <filter string="Emergency Contacts" name="emergency_contacts" domain="[('emergency_contact', '=', True)]"/>
                <filter string="Can Make Decisions" name="decision_makers" domain="[('can_make_decisions', '=', True)]"/>
                <filter string="Active Contacts" name="active_contacts" domain="[('active', '=', True)]"/>
                <filter string="Inactive Contacts" name="inactive_contacts" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Parents" name="parents" domain="[('relationship', 'in', ['parent', 'mother', 'father'])]"/>
                <filter string="Spouse" name="spouse" domain="[('relationship', '=', 'spouse')]"/>
                <filter string="Children" name="children" domain="[('relationship', 'in', ['child', 'son', 'daughter'])]"/>
                <filter string="Siblings" name="siblings" domain="[('relationship', 'in', ['sibling', 'brother', 'sister'])]"/>
                <filter string="Relatives" name="relatives" domain="[('relationship', 'in', ['relative', 'uncle', 'aunt', 'cousin'])]"/>
                <filter string="Friends" name="friends" domain="[('relationship', '=', 'friend')]"/>
                <group expand="0" string="Group By">
                    <group string="Relationship">
                        <field name="relationship"/>
                    </group>
                    <group string="Emergency Status">
                        <field name="emergency_contact"/>
                    </group>
                    <group string="Decision Rights">
                        <field name="can_make_decisions"/>
                    </group>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_hospital_contact_person" model="ir.actions.act_window">
        <field name="name">Contact Persons</field>
        <field name="res_model">hr.hospital.contact.person</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="view_hr_hospital_contact_person_tree"/>
        <field name="kanban_view_id" ref="view_hr_hospital_contact_person_kanban"/>
        <field name="search_view_id" ref="view_hr_hospital_contact_person_search"/>
        <field name="help">Manage contact persons for patients</field>
    </record>

</odoo>