<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mass Reassign Doctor Wizard -->
    <record id="view_hr_hospital_mass_reassign_doctor_wizard_form" model="ir.ui.view">
        <field name="name">hr.hospital.mass.reassign.doctor.wizard.form</field>
        <field name="model">hr.hospital.mass.reassign.doctor.wizard</field>
        <field name="arch" type="xml">
            <form string="Mass Reassign Doctor">
                <group>
                    <field name="old_doctor_id" readonly="1"/>
                    <field name="new_doctor_id" required="1"/>
                    <field name="patient_ids" widget="many2many_tags" required="1"/>
                    <field name="change_date" required="1"/>
                    <field name="reason" required="1"/>
                </group>
                <footer>
                    <button name="action_mass_reassign" string="Reassign" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_mass_reassign_doctor_wizard" model="ir.actions.act_window">
        <field name="name">Mass Reassign Doctor</field>
        <field name="res_model">hr.hospital.mass.reassign.doctor.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
