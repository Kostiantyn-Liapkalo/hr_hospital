<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Doctor Schedule Wizard -->
    <record id="view_hr_hospital_doctor_schedule_wizard_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.schedule.wizard.form</field>
        <field name="model">hr.hospital.doctor.schedule.wizard</field>
        <field name="arch" type="xml">
            <form string="Doctor Schedule">
                <sheet>
                    <group>
                        <group string="Schedule Information">
                            <field name="doctor_id" required="1"/>
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                            <field name="schedule_type" required="1"/>
                        </group>
                        <group string="Working Hours">
                            <field name="start_time" required="1"/>
                            <field name="end_time" required="1"/>
                        </group>
                        <group string="Days of Week">
                            <field name="monday"/>
                            <field name="tuesday"/>
                            <field name="wednesday"/>
                            <field name="thursday"/>
                            <field name="friday"/>
                            <field name="saturday"/>
                            <field name="sunday"/>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_schedule" string="Create Schedule" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_doctor_schedule_wizard" model="ir.actions.act_window">
        <field name="name">Doctor Schedule</field>
        <field name="res_model">hr.hospital.doctor.schedule.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
